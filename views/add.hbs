<div style="width: 100%; text-align: center; margin-bottom: 20px;">
  <h1>Добавить новый абонемент</h1>

  {{#if error}}
    <p class="ui-alert-error">{{error}}</p>
  {{/if}}
</div>

<form action="/add" method="POST" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required min="5" value="{{data.title}}">
    <label for="title">Название абонемента</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.price}}">
    <label for="price">Цена абонемента</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input id="option1" name="option1" type="text" class="validate" required min="5" value="{{data.option1}}">
    <label for="option1">Опция 1</label>
    <span class="helper-text" data-error="Введите опцию 1"></span>
  </div>

  <div class="input-field">
    <input id="option2" name="option2" type="text" class="validate" required min="5" value="{{data.option2}}">
    <label for="option2">Опция 2</label>
    <span class="helper-text" data-error="Введите опцию 2"></span>
  </div>

  <div class="input-field">
    <input id="option3" name="option3" type="text" class="validate" required min="5" value="{{data.option3}}">
    <label for="option3">Опция 3</label>
    <span class="helper-text" data-error="Введите опцию 3"></span>
  </div>

  <p>Продолжительноcть абонемента в месяцах:</p>
  <div class="input-field">
    <select name="duration">
      <option value="1">1</option>
      <option value="6">6</option>
      <option value="12">12</option>
    </select>
  </div>

  <input type="hidden" name="_csrf" value="{{surf}}">

  <button class="add-btn btn">Добавить абонемент</button>
</form>