

<div class="row">
  <h1>Профиль</h1>
  <div class="col s6">
    {{#if user.avatarUrl}}
      <img
        class="sat-avatar"
        src="/{{user.avatarUrl}}"
        alt="avatar-{{user.name}}"
      >
    {{else}}
      <p>Картинка отсутствует</p>
    {{/if}}
  </div>

  <div class="col s6">

    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p> Ваш e-mail: <strong>{{user.email}}</strong> </p>

      <div class="input-field">
        <input id="name" name="name" type="text" class="validate" required min="5" value="{{user.name}}">
        <label for="name">Ваше Имя</label>
        <span class="helper-text" data-error="Введите имя"></span>
      </div>



      <p>Картинка профиля:</p>
      <input class="file-input" type="file" name="avatar">

      <input type="hidden" name="_csrf" value="{{surf}}">

      <button type="submit" class="btn sat-btn">Сохранить изменения</button>

        {{#isEqual @root.userRole 'admin'}}
          <br>
          <br>
          <hr class="sat-hr-line">
          <a href="/add">
            <button type="button" class="btn sat-btn">Добавить абонемент</button>
          </a>
        {{/isEqual}}

        {{#isEqual @root.userRole 'client'}}
          <br>
          <br>
          <hr class="sat-hr-line">
          <a href="/card">
            <button type="button" class="btn sat-btn">Перейти в корзину</button>
          </a>

          <a  href="/orders">
            <button style="margin-top: 20px;" type="button" class="btn sat-btn">Мои заказы</button>
          </a>
        {{/isEqual}}

        {{#isEqual @root.userRole 'writer'}}
          <br>
          <br>
          <hr class="sat-hr-line">
          <a href="/editor">
            <button type="button" class="btn sat-btn">Создать статью</button>
          </a>
        {{/isEqual}}
    </form>

  </div>
</div>